{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "scripts": {
    "start": "nodemon src/index.ts",
    "watch": "nodemon --watch src/**/*.ts --exec 'ts-node src/index.ts'"
  },
  "include": [
    "src/**/*"
  ],
  "dependencies": {
    "@types/node": "^14.6.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
